{
  "name": "claude-skills",
  "version": "1.0.0",
  "description": "A collection of developer productivity skills for Claude Code including Bitbucket PR review and git worktree management",
  "author": {
    "name": "vkkotha"
  },
  "repository": "https://github.com/vkkotha/claude-skills",
  "license": "MIT",
  "keywords": [
    "bitbucket",
    "git",
    "worktree",
    "pr-review",
    "code-review",
    "mcp"
  ],
  "skills": ["./skills/"],
  "mcpServers": "./.mcp.json",
